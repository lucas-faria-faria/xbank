        .table {
            margin-top: 20px;
            margin-left: auto;
            margin-right: auto;
        }
    </style>
    <title>Consulta de Saldos</title>
</head>
<body>

    <h2>Saldo dos clientes<h2>
        <table class="table table-striped">
            <tr>                
                <th>Conta</th>
                <th>Nome</th>
                <th>Saldo</th>
                    </tr>
                <% for(var i=0; i<clientes.length; i++) {%>
                    <tr>                        
                        <td><%= clientes[i].account %></td>
                        <td><%= clientes[i].name %></td>
                        <td><%= clientes[i].balance %></td>             
                    </tr><% } %>
        </table>        
        <a class="btn btn-primary" href="/" role="button">Voltar</a>

</body>
</html>