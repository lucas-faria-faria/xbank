  <title>Cadastro de Clientes</title>
</head>
<body>

    <h2>Registro de Clientes<h2>
    <form action="/add" method="POST">
        <div class="form-group">
            <label for="InputName">Nome</label>
            <input type="text" class="form-control" id="InputName" aria-describedby="nameHelp" placeholder="Digite seu nome" name="name"required>          
        </div>
        <div class="form-group">
                <label for="InputAge">Idade</label>
                <input type="text" class="form-control" id="InputAge" aria-describedby="ageHelp" placeholder="Digite sua idade" name="age">          
        </div>

        <div class="form-group">
                <label for="InputAddress">Endereço</label>
                <input type="text" class="form-control" id="InputAddress" aria-describedby="addressHelp" placeholder="Digite seu endereço" name="address"required>          
        </div>

        <div class="form-group">
                <label for="InputAccount">Número da conta</label>
                <input type="text" class="form-control" id="InputAccount" aria-describedby="accountHelp" placeholder="Número da conta" name="account"required>          
        </div>

        <div class="form-group">
                <label for="InputAccount">Saldo inicial</label>
                <input type="text" class="form-control" id="InputBalance" aria-describedby="balanceHelp" placeholder="saldo" name="balance"required>          
        </div>

        <hr><button type="submit" class="btn btn-success">Adicionar</button>        
        <a class="btn btn-primary" href="/" role="button">Voltar</a>
    </form>     
</body>
</html>